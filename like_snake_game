#include <iostream>

using namespace std;
bool gameover;
const int width=20;
const int height=20;
/* head position,fruit position, score */
int x,y,fruitX,fruitY,score; 
enum edirection {STOP=0,LEFT, RIGHT, UP, DOWN};
edirection dir; /* holds direction of snake*/

void setup()
{
gameover=false;
dir=STOP; /*snake will not move till we start moving it*/
x=width/2;
y=height/2;
fruitX= rand()%width;
fruitY= rand()%height;
score=0;
}

void draw()
{      
    /* here we draw a map*/
    system("clrscr");

    for(int i=0; i<width+2; i++)
    {
        cout<<"#";
    } /*top wall*/
    cout<<endl;

    /*print map*/
    for(int i=0; i<height; i++)
    {
        for(int j=0; j<width; j++)
        {
            if(j==0)
                cout<<"#";
            if(i==y && j==x)
               cout<<"O";
            else if(i==fruitY && j==fruitX)
                    cout<<"F";
            else
               cout<<" ";
            if(j==width-1)
               cout<<"#";
            
            }
        cout<<endl;   
        }

    for(int i=0; i<width+2; i++)
    { /*bottom wall*/
        cout<<"#";
        cout<<endl;
        cout<<"Score"<<score;
    }
}

void input()
{
    if(1)
    {
        switch('a')
        {
            case 'a':
                dir=LEFT;
                break;

            case 'd':
                dir=RIGHT;
                break;

            case 'w':
                dir=UP;
                break;

            case 's':
                dir=DOWN;
                break;

            case 't':
                gameover=true;
                break;
        }
    }    
}

void logic()
{
    switch(dir)
    {
        case LEFT:
             x--;
             break;
        case RIGHT:
             x++;
             break;
        case UP:
            y--;
            break;
        case DOWN:
             y++;
             break;
        default:
            break;
    }
    if(x>width || x<0 || y>height || y<0)
    {
        gameover=true;
    }    
    if (x==fruitX && y==fruitY)
    {
       score += 10;
       fruitX= rand()%width;
       fruitY= rand()%height;
    }
}

int main()
{
    setup();
    while (!gameover)
    { 
        draw();
        input();
        logic();

     }    
}
